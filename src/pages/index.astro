---
import Layout from '../layouts/Layout.astro';
import recipesData from '../../../data/recipes.json'; // Added import
---

<Layout title="Welcome to AI Recipes" description="Discover unique and delicious recipes generated by AI.">
	<section class="text-center">
		<h1 class="text-5xl font-extrabold text-gray-800 mb-6">Welcome to RecipeCards!</h1>
		<p class="text-xl text-gray-600 max-w-2xl mx-auto">
			Discover unique and delicious recipes, crafted by advanced artificial intelligence.
			Get ready to skip the fluff and get cookin!
		</p>
		<!-- <div class="mt-10 p-6 bg-gray-100 rounded-lg shadow-inner max-w-md mx-auto">
			<h2 class="text-2xl font-semibold text-gray-700 mb-4">Search for your next meal</h2>
			<input 
				type="text" 
				placeholder="e.g., 'Spicy Chicken', 'Vegan Dessert'" 
				class="w-full p-3 border border-gray-300 rounded-md focus:ring-lime-500 focus:border-lime-500 text-lg"
				aria-label="Search recipes"
				disabled
			/>
			<p class="text-sm text-gray-500 mt-3">Search functionality coming soon!</p>
		</div> -->
	</section>

    <!-- New Section: All Recipes List -->
    <section class="container mx-auto p-6">
        <!-- <h2 class="text-4xl font-semibold text-gray-800 mb-6 text-center">All Recipes</h2> -->
        <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {recipesData.map((recipe) => (
                <li class="p-4 border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                    <a href={`/recipes/${recipe.id}`} class="text-xl font-medium" style="color: var(--color-primary);">
                        {recipe.title}
                    </a>
                </li>
            ))}
        </ul>
    </section>
</Layout>
